{# templates/game_generation/index.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <style>
    #game_generation {
        border: solid 5px #aacaf1;
        background-color: #f7f7f7;
        padding: 20px;
        border: solid 5px #aacaf1;
        border-radius: 10px;
        max-width: 400px;
        margin:  auto;
        font-family: Arial, sans-serif;
    }


    #game_generation select {
    width: 80px;
    padding: 5px;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 14px;
    }


    #game_generation .time-select span {
    margin: 0 5px;
    }
    div{
        margin-bottom: 20px;

    }
    input {
        background-color: #aacaf1;
        color: #000;
        padding: 5px 10px;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
    }
    .button[type="submit"] {
    background-color: #007bff;
    color: #fff;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    font-size: 16px;
    cursor: pointer;
    margin-top: 20px;
    }
    .btn-wrapper {
        display: flex;
        justify-content: center;
        margin-top: 10px;
    }
</style>
    <h1>Generate Games</h1>

    {{ form_start(form) }}
    {{ form_widget(form) }}
<div class="btn-wrapper">

    <button class="button" type="submit">Generate</button>
</div>
    {{ form_end(form) }}
{% endblock %}
