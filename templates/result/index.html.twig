{% extends 'base.html.twig' %}

{% block content %}
    <style>
        .table {
            border-collapse: collapse;
            width: 100%;
        }

        .table th {
            background-color: #f2f2f2;
        }
        .table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table td,
        .table th {
            padding: 8px;
            border: 1px solid #ddd;
        }
        body {
            font-family: Arial, sans-serif;
        }

        .button-link {
            display: inline-block;
            padding: 8px 16px;
            text-decoration: none;
            background-color: #4CAF50;
            color: white;
            border-radius: 4px;
            border: none;
            transition: background-color 0.3s ease;
        }

        .button-link:hover {
            background-color: #45a049;
        }

    </style>

        <table class="table">
            <thead>
            <tr>
                <th>Data</th>
                <th>Gazde</th>
                <th> ⚽ </th>
                <th> ⚽ </th>
                <th>Oaspeti</th>
                <th>Editare</th>
            </tr>
            </thead>
            <tbody>
            {% for group in groupedResults %}
                <tr>
                    <td>{{ group.result1.getGameID().getStartDate()|date('Y-m-d') }} {{ group.result1.getGameID().getTime().format('H:i:s') }}</td>
                    <td>{{ group.result1.getTeamID() }}</td>
                    <td>{{ group.result1.getScored() }}</td>
                    <td>{{ group.result2.getScored() }}</td>
                    <td>{{ group.result2.getTeamID() }}</td>
                    <td>
                        <a href="{{ path('app_result_edit', {'id': group.result1.getGameID()}) }}" class="button-link">Edit</a>

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_result_new') }}" class="button-link">Create new</a>
    {% endblock %}

