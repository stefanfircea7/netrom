        }

        .table td,
        .table th {
            padding: 8px;
            border: 1px solid #ddd;
        }
        body {
            font-family: Arial, sans-serif;
        }

        .button-link {
            display: inline-block;
            padding: 8px 16px;
            text-decoration: none;
            background-color: #4CAF50;
            color: white;
            border-radius: 4px;
            border: none;
            transition: background-color 0.3s ease;
        }

        .button-link:hover {
            background-color: #45a049;
        }
    </style>

    <table class="table">
        <thead>
